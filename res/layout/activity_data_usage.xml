<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp" >
    
    <TextView
        android:id="@+id/txt_ip_address"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="15dip"
        android:textSize="18dip" />

    <TextView
        android:id="@+id/txt_total_download"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="15dip"
        android:textSize="18dip" />

    <TextView
        android:id="@+id/txt_total_upload"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="15dip"
        android:textSize="18dip" />

    <TextView
        android:id="@+id/txt_total_mobile_download"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="15dip"
        android:textSize="18dip" />

    <TextView
        android:id="@+id/txt_total_mobile_upload"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="15dip"
        android:textSize="18dip" />

    <TextView
        android:id="@+id/txt_total_wifi_upload"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="15dip"
        android:textSize="18dip" />

    <TextView
        android:id="@+id/txt_total_wifi_download"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="15dip"
        android:textSize="18dip" />

</LinearLayout>